<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainpage.MainPageActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="LOGOUT"
        android:fontFamily="@font/jua"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/light_on"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Light"
        android:fontFamily="@font/jua"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        app:layout_constraintTop_toBottomOf="@id/logout_btn"
        app:layout_constraintLeft_toLeftOf="@id/logout_btn"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/location_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="내위치"
        android:fontFamily="@font/jua"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="신고"
        android:fontFamily="@font/jua"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/location_btn"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        />

    <Button
        android:id="@+id/bluetooth"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:text="bluetooth"
        android:fontFamily="@font/jua"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        app:layout_constraintTop_toBottomOf="@id/cancel_btn"
        app:layout_constraintLeft_toLeftOf="@id/location_btn"
        app:layout_constraintRight_toRightOf="@id/cancel_btn"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인 페이지"
        android:fontFamily="@font/jua"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/user_name"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/jua"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/top_guide"
        android:clickable="true"
        />

    <RelativeLayout
        android:id="@+id/kakao_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/top_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>