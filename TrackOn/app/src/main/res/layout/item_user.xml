<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@drawable/custom_backround">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="20dp"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유저 정보 : "
        android:textColor="@color/black"
        android:fontFamily="@font/jua"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/user_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 | 서건희"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_square_round_b"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/user_id"
        app:layout_constraintTop_toTopOf="@id/user_id"
        app:layout_constraintBottom_toBottomOf="@id/user_id"
        />

    <TextView
        android:id="@+id/user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이 : "
        android:textColor="@color/black"
        android:fontFamily="@font/jua"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/left_guide"
        app:layout_constraintTop_toBottomOf="@id/user_id"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/user_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_square_round_b"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/user_age"
        app:layout_constraintTop_toTopOf="@id/user_age"
        app:layout_constraintBottom_toBottomOf="@id/user_age"
        />

    <TextView
        android:id="@+id/user_authorizaty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:textColor="#ff0000"
        android:fontFamily="@font/nanum_square_round_e_b"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@id/right_guide"
        app:layout_constraintTop_toTopOf="@id/user_age"
        app:layout_constraintBottom_toBottomOf="@id/user_age"
        />

</androidx.constraintlayout.widget.ConstraintLayout>