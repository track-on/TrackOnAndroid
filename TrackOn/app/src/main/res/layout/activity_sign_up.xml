<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign_up.SignUpActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guide_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="35dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guide_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="35dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/name_guide_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/id_guide_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn_guide_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        app:layout_constraintTop_toTopOf="@id/name_guide_signup"
        android:fontFamily="@font/hanna_pro"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_signup"
        app:layout_constraintRight_toRightOf="@id/right_guide_signup"
        android:includeFontPadding="false"
        />

    <EditText
        android:id="@+id/edit_signup_id"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toBottomOf="@id/id_guide_signup"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_signup"
        app:layout_constraintRight_toRightOf="@id/right_guide_signup"
        android:hint="ID를 입력해주세요."
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/custom_backround"
        />

    <EditText
        android:id="@+id/edit_signup_password"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_id"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_signup"
        app:layout_constraintRight_toRightOf="@id/right_guide_signup"
        android:hint="PASSWORD를 입력해주세요."
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/custom_backround"
        />

    <EditText
        android:id="@+id/edit_signup_nickname"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_password"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_signup"
        app:layout_constraintRight_toRightOf="@id/right_guide_signup"
        android:hint="NICKNAME를 입력해주세요."
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/custom_backround"
        />

    <EditText
        android:id="@+id/edit_age"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_nickname"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_signup"
        app:layout_constraintRight_toRightOf="@id/right_guide_signup"
        android:hint="AGE를 입력해주세요."
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/custom_backround"
        />

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/edit_age"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_signup"
        app:layout_constraintRight_toRightOf="@id/right_guide_signup"
        android:hint="PHONENUMBER를 입력해주세요."
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/custom_backround"/>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="@id/btn_guide_signup"
        app:layout_constraintLeft_toLeftOf="@id/left_guide_signup"
        app:layout_constraintRight_toRightOf="@id/right_guide_signup"
        android:text="SIGNUP"
        android:fontFamily="@font/jua"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>